<UserControl x:Class="IracingTelemetry.MVVM.Views.RelativOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:IracingTelemetry.MVVM.Views"
             xmlns:converters="clr-namespace:IracingTelemetry.MVVM.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- All converters are now defined and referenced correctly -->
        <converters:LicenseToColorConverter x:Key="LicenseToColorConverter"/>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <ListView ItemsSource="{Binding RelativeDrivers}" 
                  Background="Transparent" 
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#99111111" CornerRadius="3" Margin="0,2" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>  <!-- Position -->
                                <ColumnDefinition Width="40"/>  <!-- License Color -->
                                <ColumnDefinition Width="180"/> <!-- Name -->
                                <ColumnDefinition Width="60"/>  <!-- Delta -->
                                <ColumnDefinition Width="100"/> <!-- Last Lap -->
                                <ColumnDefinition Width="100"/> <!-- Fastest Lap -->
                            </Grid.ColumnDefinitions>
                            
                            <!-- Position -->
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding Position}" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                            
                            <!-- License Color Indicator -->
                            <Border Grid.Column="1" 
                                    Width="30" 
                                    Height="15" 
                                    CornerRadius="2"
                                    Background="{Binding License, Converter={StaticResource LicenseToColorConverter}}"/>
                            
                            <!-- Driver Name -->
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding DriverName}" 
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       Foreground="White"/>
                            
                            <!-- Delta Time -->
                            <TextBlock Grid.Column="3" 
                                       Text="{Binding DeltaTime, StringFormat='+{0:0.0}'}" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Foreground="White"/>
                            
                            <!-- Last Lap Time -->
                            <StackPanel Grid.Column="4" Orientation="Vertical" Margin="10,0,0,0">
                                <TextBlock Text="Last Lap" 
                                           FontSize="10" 
                                           Foreground="LightGray"/>
                                <TextBlock Text="{Binding LastLapTime, Converter={StaticResource TimeSpanToStringConverter}}" 
                                           FontWeight="{Binding IsLastLapBest, Converter={StaticResource BoolToFontWeightConverter}}"
                                           Foreground="{Binding IsLastLapBest, Converter={StaticResource BoolToColorConverter}}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Fastest Lap Time -->
                            <StackPanel Grid.Column="5" Orientation="Vertical" Margin="10,0,0,0">
                                <TextBlock Text="Fastest Lap" 
                                           FontSize="10" 
                                           Foreground="LightGray"/>
                                <TextBlock Text="{Binding FastestLapTime, Converter={StaticResource TimeSpanToStringConverter}}" 
                                           Foreground="#FFD700" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
