<Window x:Class="iRacingTelemetryTool.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:iRacingTelemetryTool.MVVM.Views" 
        
        mc:Ignorable="d"
        Title="iRacing Telemetry Tool - Overlay Tool" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <TabControl>
            <TabItem Header="Overlay" DataContext="{Binding OverlayVM}">
                <views:OverlaySettingsView /> 
                
            </TabItem>
            <TabItem Header="Telemetry Analysis">
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>